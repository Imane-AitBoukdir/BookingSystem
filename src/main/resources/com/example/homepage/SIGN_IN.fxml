<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.PasswordField?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ensam.hotelalrbadr.api.controller.SignInController">
    <children>
        <HBox alignment="CENTER" layoutX="500.0" layoutY="300.0" prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="600.0" spacing="15.0">
                    <children>
                        <ImageView fitHeight="125.0" fitWidth="136.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../homePageImages/Services/Logo.png" />
                            </image>
                        </ImageView>
                        <Label text="SIGN IN" textFill="#105884">
                            <font>
                                <Font name="Constantia Bold Italic" size="50.0" />
                            </font>
                        </Label>
                        <TextField fx:id="emailField" maxHeight="39.0" maxWidth="380.0" prefHeight="39.0" promptText="E-MAIL ADRESS"
                                   style="-fx-border-radius: 20; -fx-background-radius: 20; -fx-border-color: #008CE3;" />
                        <PasswordField fx:id="passwordField" maxHeight="39.0" maxWidth="380.0" prefHeight="39.0" promptText="PASSWORD"
                                       style="-fx-border-radius: 20; -fx-background-radius: 20; -fx-border-color: #008CE3;" />
                        <Button alignment="CENTER" mnemonicParsing="false" prefHeight="39.0" prefWidth="380.0"
                                style="-fx-background-color: #008CE3;" text="SIGN IN" textFill="WHITE"
                                onAction="#handleSignIn">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <HBox alignment="CENTER">
                            <children>
                                <Label alignment="CENTER" text="NOT YET A MEMBER ?" />
                                <Hyperlink text="SIGN UP" onAction="#switchToSignUp"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <ImageView fitHeight="700.0" fitWidth="600.0" pickOnBounds="true">
                    <image>
                        <Image url="@../../../homePageImages/Services/Untitled-3.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
    </children>
</AnchorPane>