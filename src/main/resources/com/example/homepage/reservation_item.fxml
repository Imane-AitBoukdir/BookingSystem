<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="155.0" maxWidth="1118.0" prefHeight="155.0" prefWidth="1118.0"
      style="-fx-background-color: #f4f4f4; -fx-border-radius: 39; -fx-background-radius: 39;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="roomImage" fitHeight="155.0" fitWidth="287.0" pickOnBounds="true" preserveRatio="true"/>
        <VBox prefHeight="155.0" prefWidth="299.0">
            <children>
                <Label fx:id="roomName" alignment="TOP_LEFT" prefHeight="32.0" prefWidth="254.0" textFill="#004d7c">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="25.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="roomDescription" alignment="TOP_LEFT" prefHeight="41.0" prefWidth="217.0" textFill="#004d7c">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" top="-17.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <Label fx:id="roomType" textFill="#004d7c">
            <font>
                <Font name="Inknut Antiqua Bold" size="16.0" />
            </font>
            <HBox.margin>
                <Insets left="35.0" top="25.0" />
            </HBox.margin>
        </Label>
        <VBox prefHeight="155.0" prefWidth="125.0">
            <HBox.margin>
                <Insets left="66.0" />
            </HBox.margin>
            <children>
                <Label fx:id="checkInDate" alignment="CENTER" maxWidth="130.0" prefHeight="24.0" prefWidth="130.0" textFill="#004d7c">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="checkOutDate" alignment="CENTER" maxWidth="130.0" prefHeight="24.0" prefWidth="118.0" textFill="#004d7c">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="-10.0" />
                    </VBox.margin>
                </Label>
            </children>
        </VBox>
        <VBox maxWidth="130.0" prefHeight="200.0" prefWidth="130.0">
            <HBox.margin>
                <Insets left="66.0" />
            </HBox.margin>
            <children>
                <Label fx:id="totalPrice" alignment="CENTER" maxWidth="130.0" prefHeight="24.0" prefWidth="130.0" textFill="#004d7c">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="25.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="editButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        prefHeight="10.0" prefWidth="115.0"
                        style="-fx-background-color: #008CE3; -fx-background-radius: 15; -fx-border-radius: 15;"
                        text="EDIT" textFill="WHITE">
                    <font>
                        <Font name="Inknut Antiqua Bold" size="15.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="8.0" top="25.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>